<persistence xmlns="http://java.sun.com/xml/ns/persistence"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd" version="2.0">
<persistence-unit name="unlp">
<provider>org.hibernate.ejb.HibernatePersistence</provider>
<class>Clases.Administrador</class>
<class>Clases.Categoria</class>
<class>Clases.Donaciones</class>
<class>Clases.DonacionManguito</class>
<class>Clases.Emprendedor</class>
<class>Clases.Emprendimiento</class>
<class>Clases.Post</class>
<class>Clases.Usuario</class>
<properties>
<property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
<property name="hibernate.connection.password" value="admin"/>
<property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/sbarra"/>
<property name="hibernate.connection.username" value="root" />
<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" />
<property name="hibernate.hbm2ddl.auto" value="update/create"/>
</properties>
</persistence-unit>
</persistence>