<persistence xmlns="http://java.sun.com/xml/ns/persistence"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd" version="2.0">
<persistence-unit name="unlp">
<provider>org.hibernate.ejb.HibernatePersistence</provider>
<class>clases.Usuario</class>
<class>clases.Emprendedor</class>
<class>clases.Emprendimiento</class>
<class>clases.Categoria</class>
<class>clases.Donacion</class>
<class>clases.DonacionManguito</class>
<class>clases.DonacionPlan</class>
<class>clases.Administrador</class>
<class>clases.Post</class>
<properties>
<property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
<property name="hibernate.connection.password" value="root"/>
<property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/ttps"/>
<property name="hibernate.connection.username" value="root" />
<property name="hibernate.default_schema" value="ttps" />
<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" />
<property name="hibernate.hbm2ddl.auto" value="create"/>
</properties>
</persistence-unit>
</persistence>